# =============================================================================
# Zeitgeist Engine Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Google Cloud (BigQuery for GDELT)
# -----------------------------------------------------------------------------
# Path to your Google Cloud service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# -----------------------------------------------------------------------------
# Qdrant Vector Database
# -----------------------------------------------------------------------------
# Get free tier at: https://cloud.qdrant.io
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key

# -----------------------------------------------------------------------------
# LLM APIs
# -----------------------------------------------------------------------------
# Google Gemini API key from: https://aistudio.google.com
GEMINI_API_KEY=your_gemini_api_key

# Anthropic Claude API key from: https://console.anthropic.com
# Used for: Narrative synthesis (Claude Opus 4.5), Illustration concepts (Claude Sonnet 4.5)
ANTHROPIC_API_KEY=your_anthropic_api_key

# OpenAI API key from: https://platform.openai.com
# Used for: Adversarial fact verification (GPT-5.2)
# Note: Optional - verification will use Gemini fallback if not provided
OPENAI_API_KEY=your_openai_api_key

# -----------------------------------------------------------------------------
# Bluesky Configuration
# -----------------------------------------------------------------------------
# Your Bluesky handle (e.g., yourname.bsky.social)
BLUESKY_HANDLE=your.handle.bsky.social
# Create an app password at: Settings > App Passwords
BLUESKY_APP_PASSWORD=your_app_password

# -----------------------------------------------------------------------------
# Mastodon Configuration
# -----------------------------------------------------------------------------
# Your Mastodon instance (e.g., mastodon.social)
MASTODON_INSTANCE=https://mastodon.social
# Generate access token at: Preferences > Development > New Application
MASTODON_ACCESS_TOKEN=your_mastodon_token

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable/disable social posting (set to false for testing)
ENABLE_BLUESKY_POST=true
ENABLE_MASTODON_POST=true

# -----------------------------------------------------------------------------
# Alerting (Optional)
# -----------------------------------------------------------------------------
# Discord webhook for error notifications
DISCORD_WEBHOOK_URL=

# -----------------------------------------------------------------------------
# Pipeline Configuration
# -----------------------------------------------------------------------------
# Hours between digests
DIGEST_FREQUENCY_HOURS=4

# Minimum articles needed to form a cluster
MIN_CLUSTER_SIZE=5

# RAG faithfulness threshold (0.0-1.0)
FAITHFULNESS_THRESHOLD=0.95
